<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/showinfo"
        android:layout_width="550dp"
        android:layout_height="450dp"
        android:background="@drawable/modal_bg_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/GCheckIO2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GuestRoomNo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="125dp"
            android:fontFamily="@font/gothambook"
            android:text="For late check out please dial 0."
            android:textAlignment="center"
            android:textColor="#393939"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/GuestInfoTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="false"
            android:background="#bb000000"
            android:fontFamily="@font/gothambook"
            android:paddingTop="14dp"
            android:text="YOUR INFO"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/GName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GuestInfoTitle"
            android:layout_alignParentStart="true"
            android:layout_marginTop="51dp"
            android:fontFamily="@font/gothambook"
            android:text="Guest Name :"
            android:textAlignment="center"
            android:textColor="#393939"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/GuestName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GName"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gothambook"
            android:text="D2G"
            android:textAlignment="center"
            android:textColor="#393939"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/GRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GuestName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/gothambook"
            android:text="Room :"
            android:textAlignment="center"
            android:textColor="#393939"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/GuestRoomNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GRoom"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gothambook"
            android:text="23"
            android:textAlignment="center"
            android:textColor="#393939"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/GCheckIO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GuestRoomNo"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/gothambook"
            android:text="Check-In Time / Check-Out Time"
            android:textAlignment="center"
            android:textColor="#393939"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/GuestCheckIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GCheckIO"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gothambook"
            android:text="Check-In : 2:00 PM"
            android:textAlignment="center"
            android:textColor="#393939"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/GuestCheckOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GuestCheckIn"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gothambook"
            android:text="Check-Out : 12:00 Noon"
            android:textAlignment="center"
            android:textColor="#393939"
            android:textSize="20sp" />

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
